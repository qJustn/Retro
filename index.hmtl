  <script>
    // Live clock (local browser time)
    const clockEl = document.getElementById('clock');
    function updateClock(){
      const now = new Date();
      const t = now.toLocaleTimeString('de-DE', { hour12:false });
      const d = now.toLocaleDateString('de-DE', { weekday:'long', year:'numeric', month:'2-digit', day:'2-digit' });
      clockEl.textContent = `${t} ‚Ä¢ ${d}`;
    }
    updateClock();
    setInterval(updateClock, 1000);

    // Toast helper
    const toast = document.getElementById('toast');
    const toastText = document.getElementById('toastText');
    let toastTimer = null;
    function showToast(html){
      toastText.innerHTML = html;
      toast.classList.add('show');
      clearTimeout(toastTimer);
      toastTimer = setTimeout(()=>toast.classList.remove('show'), 2600);
    }

    // Reactive heart monitor
    const bpmEl = document.getElementById('bpm');
    const statusText = document.getElementById('statusText');
    const statusDot = document.getElementById('statusDot');
    const heartBox = document.getElementById('heartBox');
    const monitorModeEl = document.getElementById('monitorMode');

    let modeIndex = 0;
    const modes = [
      { name: "AUTO", min: 72, max: 92, label:"STABIL", color:"var(--accent)" },
      { name: "FOCUS", min: 62, max: 78, label:"RUHIG", color:"var(--accent)" },
      { name: "ALERT", min: 88, max: 118, label:"ALARM", color:"var(--danger)" }
    ];

    function randInt(min,max){ return Math.floor(Math.random()*(max-min+1))+min; }

    function applyMode(){
      const m = modes[modeIndex];
      monitorModeEl.textContent = m.name;
      statusText.textContent = m.label;
      statusText.style.color = m.color;

      // dot color
      statusDot.style.background = m.color;
      statusDot.style.boxShadow = `0 0 14px ${m.color}`;

      // adjust ekg speed
      const line = document.querySelector('.ekg-line');
      const scan = document.querySelector('.scan');
      const speed = m.name === "ALERT" ? 1.7 : (m.name === "FOCUS" ? 3.2 : 2.8);
      line.style.animationDuration = speed + "s";
      scan.style.animationDuration = speed + "s";

      // push new bpm
      const bpm = randInt(m.min, m.max);
      bpmEl.textContent = bpm.toString();

      // heart pulse animation
      heartBox.animate(
        [{ transform:"scale(1)" }, { transform:"scale(1.10)" }, { transform:"scale(1)" }],
        { duration: m.name === "ALERT" ? 420 : (m.name === "FOCUS" ? 650 : 520), iterations: 1, easing:"ease-in-out" }
      );
    }

    // keep bpm changing slightly
    setInterval(()=>{
      const m = modes[modeIndex];
      const cur = parseInt(bpmEl.textContent || "80", 10);
      const next = Math.max(m.min, Math.min(m.max, cur + randInt(-3, 4)));
      bpmEl.textContent = next.toString();
    }, 900);

    // initial
    applyMode();

